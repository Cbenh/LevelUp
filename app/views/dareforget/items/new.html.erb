<div class="container-index">
	<div class="available-box">
		<div class="title">

			<h2>DareForget</h2>
			<hr>
			<h3>Ajouter <%= @item.name %></h3>
		</div>

		<%= form_for @item, html: { class: "form-horizontal" } do |f| %>
		<%= hidden_field_tag :id, @item.id %>

		<div class="control-group">
			<%= f.label :stock, "Stock actuel", class: "control-label" %>
			<div class="controls">
				<%= f.number_field :stock, min: 0, step: 1, required: true %> <%= @item.unit %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :nb_users, "Pour", class: "control-label" %>
			<div class="controls">
				<%= f.number_field :nb_users, min: 1, step: 1, required: true %> consommateurs
			</div>
		</div>

		<div class="control-group">
			<%= f.label :reminder_interval, "Rappel", class: "control-label" %>
			<div class="controls">
				<%= f.number_field :reminder_interval, min: 0, step: 1, required: true %> jours avant
			</div>
		</div>

		<div class="control-group">
			<%= f.label :remind_at, "Ã€", class: "control-label" %>
			<div class="controls">
				<%= f.time_select :remind_at, minute_step: 5 %>
			</div>
		</div>

		<div class="form-actions">
			<%= f.submit "Valider" %>
			<%= link_to "annuler", dareforget_path, class: :btn %>
		</div>
		<% end %>
	</div>
</div>

