<div class="container" style="padding-top: 4%;"%>
	<H2>Profil</H2>
	<div>

		<%= @profile.pseudo %>
		<%= @profile.gender %>
		<%= @profile.birth_date %>
	</div>
</div>

<%= form_for @profile, html: { class: "form-horizontal" } do |f| %>

		<div class="control-group">
			<%= f.label :stock, "Stock actuel", class: "control-label" %>
			<div class="controls">
				<%= f.number_field :stock, min: 0, step: 1, required: true %> <%= @item.unit %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :nb_users, "Pour", class: "control-label" %>
			<div class="controls">
				<%= f.number_field :nb_users, min: 1, step: 1, required: true %> consommateurs
			</div>
		</div>

		<div class="control-group">
			<%= f.label :reminder_interval, "Rappel", class: "control-label" %>
			<div class="controls">
<%= datetime_field(:user, :meeting_time) %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :remind_at, "Ã€", class: "control-label" %>
			<div class="controls">
				<%= f.time_select :remind_at, minute_step: 5 %>
			</div>
		</div>

		<div class="form-actions">
			<%= f.submit "Valider" %>
			<%= link_to "annuler", dareforget_path, class: :btn %>
		</div>
		<% end %>