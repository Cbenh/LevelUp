				<%= image_tag("df-logo.png", :class => "logo_app", :onmouseover => "changeContent('dareforget', 'DareForget')", :onmouseout => "changeContent('dareforget', 'DF')") %>
				<% end %>
			</p>
		</li>
		<li class="li-link">
			<p>
				<%= link_to "FC", foodchain_path, :onmouseover => "changeContent('foodchain', 'FoodChain')", :onmouseout => "changeContent('foodchain', 'FC')",:class => "a-foodchain", :id => "foodchain" %>
				<%= link_to foodchain_path do %>
				<%= image_tag("fc-logo.png", :class => "logo_app", :onmouseover => "changeContent('foodchain', 'FoodChain')", :onmouseout => "changeContent('foodchain', 'FC')") %>
				<% end %>

			</p>
		</li>
		<li class="li-link">
			<p>
				<%= link_to "DP", dontpanic_path, :onmouseover => "changeContent('dontpanic', 'DontPanic')", :onmouseout => "changeContent('dontpanic', 'DP')",:class => "a-dontpanic", :id => "dontpanic" %>
				<%= link_to dontpanic_path do %>
				<%= image_tag("dp-logo.png", :class => "logo_app", :onmouseover => "changeContent('dontpanic', 'DontPanic')", :onmouseout => "changeContent('dontpanic', 'DP')") %>
